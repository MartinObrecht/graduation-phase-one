@model PoliceDepartment.EvidenceManager.MVC.Models.ErrorModel
@{
    ViewData["Title"] = Model == null ? "An error ocurred" : Model.Title;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! An error ocurred, but don't freak out! Our team will be comunicated, try again later!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}